<%- include("../partials/header"); -%>

<!-- Page Wrapper -->
<div class="page-wrapper">

  <div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
      <div class="row">
        <div class="col">
          <h3 class="page-title"> Registration Form</h3>
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active"> Registration Form</li>
          </ul>
        </div>
      </div>
    </div>
    <!-- /Page Header -->


    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Registration Form</h4>
          </div>
          <div class="card-body">

            <form class="" action="doctorRegistration" method="post">

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>First Name</label>
                    <input name="firstName" type="text" class="form-control" value="<%= doctor.firstName %>" required>
                  </div>
                  <div class="form-group">
                    <label>Last Name</label>
                    <input name="lastName" type="text" class="form-control" value="<%= doctor.lastName %>">
                  </div>
                  <div class="form-group">
                    <label>Location</label>
                    <input name="location" type="text" class="form-control">
                  </div>

                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label">Department</label>
                    <!-- <input name="department" type="text" class="form-control" value="<%= doctor.department %>" required> -->
                    <div class="">
                      <select name="department" class="form-control">
                        <option>-- Select --</option>
                        <option>Urology</option>
                        <option>Neurology</option>
                        <option>Dentist</option>
                        <option>Orthopedic</option>
                        <option>Cardiologist</option>
                      </select>
                    </div>

                  </div>
                  <div class="form-group">
                    <label>Fees</label>
                    <input name="fees" type="text" class="form-control" value="<%= doctor.price %>" required>
                  </div>
                  <div class="form-group">
                    <label class="d-block">Sex:</label>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="gender" id="gender_male" value="M" required>
                      <label class="form-check-label" for="gender_male">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="gender" id="gender_female" value="F">
                      <label class="form-check-label" for="gender_female">Female</label>
                    </div>
                  </div>
                </div>
              </div>

              <div class="text-right">
                <button name="button" type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
<!-- /Page Wrapper -->


<%- include("../partials/footer"); -%>
